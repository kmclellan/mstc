<header class="navbar navbar-inverse navbar-fixed-top ">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <%= link_to "MS Therapy Centre Lothian", 'http://www.mstc-lothian.org.uk/', id: "logo", class: "navbar-brand" %>
    </div>
    <nav>
      <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",     home_path %></li>
        <li><%= link_to "About",    about_path %></li>
        <li><%= link_to "Contact",  contact_path %></li>
        <li><%= link_to "Help",     help_path %></li>
        <% if logged_in? %>
          <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Your Profile<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "View Information", current_user %></li>
              <li><%= link_to "Edit Information", edit_user_path(current_user) %></li>
            </ul>
          </li>
          <% if current_user.usertype_id == 1 %>
            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">User management<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Users list", users_path %></li>
                <li><%= link_to "Create user", users_new_path%></li>
              </ul>
            </li>
          <% end %>
          <li><%= link_to "Log out", logout_path, method: :delete %> </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
      </div>
    </nav>
  </div>
</header>


